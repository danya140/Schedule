<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="erfr"
                android:gravity="center_horizontal"
                android:id="@+id/day1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TableRow android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView android:id="@+id/time111"/>
                    <TextView android:id="@+id/name111"/>
                    <TextView android:id="@+id/teacher111"/>
                    <TextView android:id="@+id/class111"/>
                </TableRow>
                <TableRow android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView android:layout_width="50dip" android:layout_height="50dip" android:background="#00aa00"/>
                    <ImageView android:layout_width="50dip" android:layout_height="50dip" android:background="#cc0000"/>
                </TableRow>

            </LinearLayout>
        </LinearLayout>

    </TableLayout>
</LinearLayout>